#include <iostream>
#include <ctime>
#include <math.h>

using namespace std;

int main(int argc, const char * argv[]) {
	setlocale(LC_ALL, "Russian");
	int maxel = 100;
	int nummax = -1;
	int n;

	
	cout << "Введите длину массива n: ";
	cin >> n;
	if (cin.fail()) {
		cout << "Ошибка!Введите коректное значение переменной n";
		return 1;
	}
	if (n < 0 or n == 0) {
		cout << "Ошибка!Введите коректное значение переменной n" << endl;
		return 1;
	}

	int *a = new int[n];

	srand(time(0));
	cout << "Массив:" << endl;
	for (int i = 0; i < n; i++) {
		a[i] = rand() % 21 - 10;
		cout << a[i] << " ";
	}

	int *pk = a;
	for (int i = 0; i < n; i++) {
		if (abs(*pk) < abs(maxel)) {
			maxel = *pk;
		}
		pk++;
	}
	cout << endl << "Наименьшее по модулю число массива: " << maxel << endl;


	int sum = 0;
	int *pkk = a;
	int firstindex = -1;
	for (int i = 0; i < n; i++) {
		cout << *pkk;
		if (*(pkk) == 0) {

			firstindex = i;
			break;
		}
		pkk++;
	}
	for (int i = firstindex; i < n; i++) {
		sum += abs(*(pkk));
		pkk++;
	}
	if (firstindex != -1) {
		cout << "Сумма элементов после первого нуля : " << sum << endl;
	}
	else {
		cout << "Сумма элементов после первого нуля равна нулю" << endl;
	}



	cout << "Изменённый массив:" << endl;
	int *pkc = a;
	int *pkn = a;
	for (int i = 0; i < n; i++) {
		if ((i + 1) % 2 != 0) {
			cout << *pkn << " ";
		}
		pkn++;
	}
	cout << "_ ";
	for (int i = 0; i < n; i++) {
		if ((i + 1) % 2 == 0) {
			cout << *pkc << " ";
		}
		pkc++;
	}
	cout << endl;

	system("pause");
	return 0;
}
