#include <iostream>
#include <ctime>
#include <pch.h>

using namespace std;;

int main() {
	setlocale(LC_ALL, "Russian");
	int pr_pol = 1;
	int *a = new int[10];
	srand(time(0));

	for (int i = 0; i < 10; i++) {
		a[i] = rand() % 21 - 10;
		cout << a[i] << " ";
	}
	int k = 0;
	int *pk = a;
	for (int i = 0; i < 10; i++) {
		if ((*pk > 0) && (*pk % 3 == 0)) {
			k += 1;
			pr_pol *= *pk;
		}
		pk++;
	}
	if (k == 0) {
		cout << endl << "Произведение положительных элементов массива кратных трём: 0" << endl;
		cout << endl << "Количество положительных элементов массива кратных трём: 0" << endl;
	}
	else {
		cout << endl << "Произведение положительных элементов массива кратных трём: " << pr_pol << endl;
		cout << endl << "Количество положительных элементов массива кратных трём: " << k << endl;
	}
	return 1;
}
